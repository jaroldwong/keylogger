<p id="notice"><%= notice %></p>

<!-- <h1>Key Inventory</h1> -->

<ul class="nav nav-tabs">
  <li class="<%= active_tab(root_path) %>">
    <%= link_to "Inventory" %>
  </li>
  <li class="<%= active_tab(keys_path(unassigned: true)) %>">
    <%= link_to "Unassigned", keys_path(unassigned: true) %>
  </li>
  <li class="<%= active_tab(keys_path(missing: true)) %>">
    <%= link_to "Missing", keys_path(missing: true) %>
  </li>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Serial Number</th>
      <th>Key Class</th>
      <th>Department</th>
      <th>Issued</th>
      <th>Access</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @keys.each do |key| %>
      <tr data-link="<%= edit_key_path(key) %>">
        <td><%= key.serial_no %></td>
        <td><%= key.key_class %></td>
        <td>
          <% if key.person.nil? %>
            <%= "Unassigned" %>
          <% else %>
            <%= key.person.departments.first.name %>
          <% end %>
        </td>
        <td>
          <% if key.person.nil? %>
            <%= "Unassigned" %>
          <% else %>
            <%= key.person.name %>
          <% end %>
        </td>
        <td><%= %></td>
<!--
        <td><%= link_to 'Show', key %></td>
        <td><%= link_to 'Edit', edit_key_path(key) %></td>
        <td><%= link_to 'Destroy', key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->
      </tr>
    <% end %>
  </tbody>
</table>

