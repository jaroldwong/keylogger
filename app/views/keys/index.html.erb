<p id="notice"><%= notice %></p>

<h1>Listing Keys</h1>

<table>
  <thead>
    <tr>
      <th>Serial no</th>
      <th>Key class</th>
      <th>Person</th>
      <th>Issued</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keys.each do |key| %>
      <tr>
        <td><%= key.serial_no %></td>
        <td><%= key.key_class %></td>
        <td><%= key.person_id %></td>
        <td><%= key.issued %></td>
        <td><%= link_to 'Show', key %></td>
        <td><%= link_to 'Edit', edit_key_path(key) %></td>
        <td><%= link_to 'Destroy', key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

